<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="userService" class="Tema.Service.Service"/>

    <bean id="chatService" class="Tema.ServerRMI.ServerImpl">
        <constructor-arg ref="userService"/>
    </bean>

    <bean class="org.springframework.remoting.rmi.RmiServiceExporter">

        <property name="serviceName" value="Chat"/>
        <property name="service" ref="chatService"/>
        <property name="serviceInterface" value="Tema.ServerRMI.IServices"/>
        <property name="servicePort" value="1099"/>
    </bean>



</beans>